#!/bin/sh

PROC_ID=$1
PORT=$2
AUTH_PWD=$3
MEMORY_SIZE=$4

if [ "$#" = "4" ]; 
then
    POST_DATA = "{ 'id': '$PROC_ID', 'port': $PORT, 'pwd': '$AUTH_PWD', 'mem': $MEMORY_SIZE }"

    curl -L localhost:3000/redis -H "Content-Type: application/json" -XPOST -d $POST_DATA
else
    echo "Usage: start-redis [Process ID] [Port] [Authorize Password] [Memory Size]"
fi